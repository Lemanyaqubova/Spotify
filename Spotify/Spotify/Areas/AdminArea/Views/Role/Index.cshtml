@model List<IdentityRole>
@{
    int count = 0;
}
<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Role Table</h4>
                    @if (User.IsInRole("Moderator"))
                    {
                        <a asp-action="create" class="btn btn-success">Create Role</a>
                    }
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Setting</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Name</td>
                                        <td>
                                            @if (User.IsInRole("Moderator"))
                                            {
                                                <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                                    <i class="fa-solid fa-trash"></i>
                                                </a>

                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>