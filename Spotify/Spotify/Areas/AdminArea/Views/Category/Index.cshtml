@model IEnumerable<Category>
@{
    int count = 0;
}

<div class="container">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Category</h4>
                <div class="table-responsive pt-3">

                    @if (User.IsInRole("Moderator"))
                    {
                        <a asp-controller="Category" asp-action="Create" class="btn btn-success">Create Category</a>
                    }
                    <table class="table table-bordered my-3">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>

                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Color
                                </th>
                                <th>
                                    Setting
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                   
                                    <td>
                                        <img style="border-radius: 2px; width: 100px; height: 100px;" src="~/assets/images/@category.ImageUrl" alt="img">
                                    </td>
                                    <td style="font-size: 15px;">
                                        @Html.Raw(category.Name)
                                    </td>
                                    
                                  
                                    <td style="font-size: 15px;">
                                        <div style="background-color:@category.Color;width:30px; height:30px; border-radius:50%">
                                        </div>
                                    </td>


                                    <td style="display: flex;">
                                        <a asp-action="detail" asp-route-id="@category.Id" class="btn btn-outline-primary">
                                            <i class="fa-solid fa-circle-info"></i>
                                        </a>
                                        <a asp-action="update" asp-route-id="@category.Id" class="btn btn-outline-warning">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>
                                        @if (User.IsInRole("Moderator"))
                                        {
                                            <form asp-action="delete" asp-route-id="@category.Id">
                                                <button style="color: white;" type="submit" class="btn btn-danger"><i class="mdi mdi-delete"></i></button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
  
</div>
