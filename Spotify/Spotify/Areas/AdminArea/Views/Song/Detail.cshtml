@model  SongDetailVm


<div class="container">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Song detail</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered my-3">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                   Artist
                                </th>
                                <th>
                                    Album
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Path
                                </th>
                                <th>
                                    Rating
                                </th>
                                <th>
                                    Color
                                </th>
                            
                              
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <img style="border-radius: 4px; width: 100px; height: 100px;" src="~/assets/images/@Model.ImageUrl" alt="song">
                                </td>
                                <td style="font-size: 15px;">
                                    @Html.Raw(Model.Name)
                                </td>
                                <td style="font-size: 15px;">
                                    @foreach (var artist in Model.Artists)
                                    {
                                        <p>@Html.Raw(artist.FullName)</p>
                                    }
                                </td>
                                <td style="font-size: 15px;">
                                    @Html.Raw(Model.AlbumName)
                                </td>
                                <td>
                                    @Html.Raw(Model.Category)
                                </td>
                                <td style="font-size: 15px;">
                                    @Html.Raw(Model.Path)
                                </td>
                                <td style="font-size: 15px;">

                                    @if (Model.Rating == null)
                                    {
                                        <p>0</p>
                                    }
                                    else
                                    {
                                        <p>@Model.Rating</p>
                                    }

                                </td>
                                <td style="font-size: 15px;">
                                    <div style="background-color:@Model.Color;width:30px; height:30px; border-radius:50%">

                                   </div>
                                </td>
                                
                             
                            </tr>
                        </tbody>
                    </table>
                   
                </div>
            </div>
        </div>
    </div>
</div>