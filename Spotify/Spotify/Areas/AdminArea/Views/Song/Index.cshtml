@model PaginationVM<SongListVM>

@{
    int count = 0;
}

<div class="container">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Songs</h4>
                <div class="table-responsive pt-3">

                    @if (User.IsInRole("Moderator"))
                    {
                        <a asp-controller="Song" asp-action="Create" class="btn btn-success">Create Song</a>
                    }
                    <table class="table table-bordered my-3">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>

                                <th>
                                    Image
                                </th>
                                <th>
                                   Name
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Album Name
                                </th>
                                <th>
                                    Date
                                </th>
                                <th>
                                    Setting
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var song in Model.Songs)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img style="border-radius: 2px; width: 100px; height: 100px;" src="~/assets/images/@song.ImageUrl" alt="img">
                                    </td>
                                    <td style="font-size: 15px;">
                                        @Html.Raw(song.Name)
                                    </td>
                                    <td style="font-size: 15px;">
                                        @Html.Raw(song.Category)
                                    </td>
                                    <td style="font-size: 15px;">
                                        @Html.Raw(song.AlbumName)
                                    </td>
                                    <td style="font-size: 15px;">
                                        @Html.Raw(song.CreateDate.ToString("MMMM dd , yyyy"))
                                    </td>
                                    
                                  
                                    <td style="display: flex;">
                                        <a asp-action="detail" asp-route-id="@song.Id" class="btn btn-outline-primary">
                                            <i class="fa-solid fa-circle-info"></i>
                                        </a>
                                        <a asp-action="update" asp-route-id="@song.Id" class="btn btn-outline-warning">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>
                                        @if (User.IsInRole("Moderator"))
                                        {
                                            <form asp-action="delete" asp-route-id="@song.Id">
                                                <button style="color: white;" type="submit" class="btn btn-danger"><i class="mdi mdi-delete"></i></button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <nav aria-label="Page navigation example">
        <ul class="pagination d-flex justify-content-center">
            <li class="page-item @(Model.Previous == false ? "disabled" : "")">
                <a asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" class="page-link" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            @for (int i = 1; i <= Model.TotalPage; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "disabled" : "")"><a asp-action="Index" asp-route-page="@i" class="page-link">@i</a></li>
            }
            <li class="page-item @(Model.Next == true ? "" : "disabled")">
                <a asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" class="page-link" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
