@model ChanceRoleVM

<div class="container">
    <div class="row">
        <form method="post">
            @foreach (var item in Model.AllRoles)
            {
                if (Model.UserRoles.Any(r => r == item.Name))
                {
                    <input name="roles" value="@item.Name" type="checkbox" checked />

                    @item.Name <br />

                }
                else
                {
                    <input name="roles" value="@item.Name" type="checkbox" />

                    @item.Name <br />
                }

            }
            <button type="submit" class="btn btn-primary mr-2" style="margin-top:20px !important">Chance</button>
        </form>
    </div>
</div>