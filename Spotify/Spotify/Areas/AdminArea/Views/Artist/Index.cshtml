@model List<Artist>
@{
    int count = 0;
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Artist Table</h4>
                    @if (User.IsInRole("Moderator"))
                    {
                        <a asp-controller="artist" asp-action="Create" class="btn btn-success">Create Artist</a>
                    }
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Position</th>
                                    <th>Setting</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>
                                            @count
                                        </td>
                                        <td>
                                            <img src="~/assets/images/@item.ImageUrl" style="border-radius: 2px; width: 100px; height: 100px;">
                                        </td>
                                        <td>@item.FullName</td>
                                       
                                        <td>@item.ArtistPositions.FirstOrDefault(a => a.ArtistId == item.Id)?.Position.Name</td>

                                        <td>
                                            <a asp-action="detaill" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                                <i class="fa-solid fa-circle-info"></i>
                                            </a>
                                            <a asp-action="update" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                                <i class="fa-solid fa-pen-to-square"></i>
                                            </a>
                                            @if (User.IsInRole("Moderator"))
                                            {
                                                <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                                    <i class="fa-solid fa-trash"></i>
                                                </a>
                                            }
                                        </td>
                                   </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


