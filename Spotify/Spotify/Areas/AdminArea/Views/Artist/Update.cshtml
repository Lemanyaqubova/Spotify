@model ArtistUpdateVM

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Update Artist Form</h4>
           
                <form method="post" class="forms-sample" enctype="multipart/form-data">
                    <div class="images">
                        <div class="main-image">
                            <h3>Main image</h3>
                            <img width="200" src="~/assets/images/@Model.ImageUrl" />
                        </div>
                        <div class="bg-image">
                            <h3>Background image image</h3>
                            <img width="200" src="~/assets/images/@Model.AboutImg" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Photo"></label>
                        <input asp-for="@Model.Photo" class="form-control" placeholder="photo">
                        <span class="text-danger" asp-validation-for="@Model.Photo"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.AboutPhoto"></label>
                        <input asp-for="@Model.AboutPhoto" class="form-control" placeholder="photo">
                        <span class="text-danger" asp-validation-for="@Model.AboutPhoto"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName"></label>
                        <input asp-for="FullName" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="FullName"></span>
                    </div>

                    <div>
                        <label asp-for="PositionIds"></label>
                        <select asp-for="PositionIds" class="form-select">
                            @foreach (var position in Model.Positions)
                            {
                                <option value="@position.Id">@position.Name</option>
                            }
                        </select>
                        <div>
                            <span asp-validation-for="PositionIds">
                            </span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationPartial"></partial>
      }